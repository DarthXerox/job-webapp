@using System.ComponentModel.DataAnnotations
@model Business.DTOs.CompanyDto
@{ ViewData["Title"] = "Company Information"; }

<h4>Company Information</h4>
<hr />
<div class="row">
    <div>
        <form asp-action="EditCompany" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>@Html.HiddenFor(model => model.Id)</div>
            <div class="form-group">
                <h5>Company name</h5>
                @Html.TextBoxFor(model => model.Name, new { placeholder = "Name", required = true, maxlength = 64 })
            </div>
            <div>@Html.HiddenFor(model => model.UserId)</div>
            <div class="form-group">
                <input type="submit" name="EditCompany" method="post" value="Confirm changes" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
